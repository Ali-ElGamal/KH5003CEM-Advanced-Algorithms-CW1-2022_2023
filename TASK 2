import java.util.Scanner;

public class Main {
  public static void main(String[] args) {
    Scanner input = new Scanner(System.in);
    System.out.print("Enter the first number: ");
    int num1 = input.nextInt();  // reads first number from user input
    System.out.print("Enter the second number: ");
    int num2 = input.nextInt();  // reads second number from user input

    // calls the gcd() method and stores the result in variable result
    int result = gcd(num1, num2);

    // prints out the GCD of the two numbers
    System.out.println("The GCD of " + num1 + " and " + num2 + " is: " + result);
  }

  // calculates the GCD of two numbers using recursion
  public static int gcd(int num1, int num2) {
    if (num2 == 0) {  // base case
      return num1;
    } else {
      return gcd(num2, num1 % num2);  // recursive call
    }
  }
}
